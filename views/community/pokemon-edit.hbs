
<div class="bg-community">
<h1>Edit Pokemon</h1>
<form class="community-form" action="/community/{{pokemon.id}}/edit" method="POST" enctype="multipart/form-data">

    <div><label>Name</label>
    <input type="text" name="name" value="{{pokemon.name}}" /></div>

    <div><label>Description</label>
    <textarea rows="5" cols="20" name="description">{{pokemon.description}}</textarea></div>
    
    <div><label>Image</label>
    <input type="file" name="image" /></div>

    <select name="type">
        <option value="0">select type</option>
        {{#each poketypes}}
        {{#eq name ../pokemon.type.name}}
        <option value="{{id}}" selected>{{name}}</option>
        {{else}}
        <option value="{{id}}">{{name}}</option>
        {{/eq}}
        {{/each}}
    </select>

    <button type="submit">Update</button>
</form>
</div>

