
<div class="bg-community">
<h1>Welcome to the Community, {{loggedInUser}}!</h1>

<ul>
{{#each pokemons}} 
    
    <p>{{name}}</p>
    <p>{{rating}}</p>
    <p>{{description}}</p>
    <p>{{user.username}}</p>
    <p><img src="{{imageUrl}}" alt="" srcset=""></p>
   <br />
<p>Add a review</p>
<form action="/reviews/{{id}}/add" method="POST">
    <label>Name</label>
    <input type="text" name="name"/>

    <label>Comment</label>
    <textarea name="comment"></textarea>

    <button type="submit">Add review</button>
</form>
<hr />
{{#each reviews}}
<p>{{comment}} - {{name}}</p>
{{/each}}
    
{{/each}}   
</ul>

<ul>
<li><a href="/create">Create Pokemon</a></li>
<br/>
<li><a href="/mypokemons">My Pokemons</a></li>
</ul>
</div>

